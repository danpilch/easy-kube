ENV['VAGRANT_DEFAULT_PROVIDER'] = 'virtualbox'

Vagrant.configure("2") do |config|
  config.ssh.insert_key = false
  config.ssh.username = 'vagrant'

  config.vm.provider :virtualbox do |vb|
    vb.customize ["modifyvm", :id, "--memory", "2048"]
  end

  # CentOS 7
  config.vm.define "centos7" do |easykube|
    easykube.vm.hostname = "centos7.dev"
    easykube.vm.box = "centos/7"
    easykube.vm.network :private_network, ip: "192.168.60.6"
    #easy-kube.vm.network "forwarded_port", guest: 3000, host: 4003
    #easy-kube.vm.network "forwarded_port", guest: 443, host: 4433
  end

  # Ansible
  config.vm.provision "ansible" do |ansible|

    ansible.groups = {
      "kubernetes-servers" => ["centos7"],
    }

    #ansible.extra_vars = { }

    ansible.sudo = true
    ansible.playbook = "../create-cluster-playbook.yml"
	ansible.raw_arguments = "-vv"
  end
end
